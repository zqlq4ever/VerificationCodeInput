<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:tools = "http://schemas.android.com/tools"
              xmlns:ver = "http://schemas.android.com/apk/res-auto"
              android:id = "@+id/activity_main"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:orientation = "vertical"
              android:paddingTop = "@dimen/activity_vertical_margin"
              android:paddingBottom = "@dimen/activity_vertical_margin"
              tools:context = "com.dalimao.verificationcodeinput.MainActivity">
    
    <com.dalimao.corelibrary.VerificationCodeInput
        android:id = "@+id/ver_number2"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity = "center"
        ver:box = "4"
        ver:box_bg_focus = "@drawable/verification_edit_bg_focus"
        ver:box_bg_normal = "@drawable/verification_edit_bg_normal"
        ver:inputType = "number"
        />
    
    <TextView
        android:id = "@+id/tv_number"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_margin = "20dp"
        android:background = "#666666"
        android:gravity = "center"
        android:padding = "10dp"
        android:text = "*"
        android:textColor = "#fff"
        android:textSize = "30sp" />
    
    <TextView
        android:id = "@+id/tv_2"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_margin = "20dp"
        android:background = "#666666"
        android:gravity = "center"
        android:padding = "10dp"
        android:text = "2"
        android:textColor = "#fff"
        android:textSize = "30sp" />
    
    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:visibility = "gone">
        
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:gravity = "center_horizontal"
            android:orientation = "vertical">
            
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "系统样式："
                />
            
            <com.dalimao.corelibrary.VerificationCodeInput
                android:id = "@+id/verificationCodeInput"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "16dp"
                ver:box = "4"
                ver:child_h_padding = "5dp"
                />
            
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:padding = "12dp"
                android:text = "自动定义样式："
                />
            
            <com.dalimao.corelibrary.VerificationCodeInput
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "16dp"
                android:background = "@color/colorAccent"
                ver:box = "3"
                ver:box_bg_focus = "@drawable/verification_edit_bg_focus"
                ver:box_bg_normal = "@drawable/verification_edit_bg_normal"
                ver:child_h_padding = "5dp"
                />
            
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:padding = "12dp"
                android:text = "定义个数："
                />
            
            <com.dalimao.corelibrary.VerificationCodeInput
                android:id = "@+id/ver_number"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "16dp"
                ver:box = "5"
                ver:box_bg_focus = "@drawable/verification_edit_bg_focus"
                ver:box_bg_normal = "@drawable/verification_edit_bg_normal"
                ver:child_h_padding = "5dp"
                ver:inputType = "number"
                />
            
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:padding = "12dp"
                android:text = "定义密码类型："
                />
            
            <com.dalimao.corelibrary.VerificationCodeInput
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "16dp"
                ver:box = "5"
                ver:box_bg_focus = "@drawable/verification_edit_bg_focus"
                ver:box_bg_normal = "@drawable/verification_edit_bg_normal"
                ver:child_h_padding = "5dp"
                ver:inputType = "password"
                />
            
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:padding = "12dp"
                android:text = "定义大小："
                />
            
            <com.dalimao.corelibrary.VerificationCodeInput
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_marginBottom = "16dp"
                ver:box = "5"
                ver:box_bg_focus = "@drawable/verification_edit_bg_focus"
                ver:box_bg_normal = "@drawable/verification_edit_bg_normal"
                ver:child_h_padding = "5dp"
                ver:child_height = "40dp"
                ver:child_width = "60dp"
                ver:inputType = "password"
                />
        
        </LinearLayout>
    
    </ScrollView>

</LinearLayout>
